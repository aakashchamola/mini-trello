# Frontend Environment Variables
# Copy this file to frontend/.env and update with your values

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_SOCKET_URL=http://localhost:3001

# Application Configuration
REACT_APP_NAME=Mini Trello
REACT_APP_VERSION=1.0.0
REACT_APP_UPLOAD_MAX_SIZE=5242880
REACT_APP_WEBSOCKET_ENABLED=true
REACT_APP_DESCRIPTION=A collaborative task management application

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_PRIMARY_COLOR=#0079bf

# Real-time Configuration
REACT_APP_SOCKET_RECONNECTION_ATTEMPTS=5
REACT_APP_SOCKET_RECONNECTION_DELAY=1000

# Development Configuration
GENERATE_SOURCEMAP=true
CHOKIDAR_USEPOLLING=false

# Performance
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# External Services (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=
REACT_APP_HOTJAR_ID=

# Google OAuth Configuration
# Replace with your actual Google Client ID from Google Cloud Console
REACT_APP_GOOGLE_CLIENT_ID=xyz
# PWA Configuration
REACT_APP_PWA_NAME=Mini Trello
REACT_APP_PWA_SHORT_NAME=Trello
REACT_APP_PWA_DESCRIPTION=Collaborative task management
REACT_APP_PWA_THEME_COLOR=#0079bf
REACT_APP_PWA_BACKGROUND_COLOR=#ffffff
