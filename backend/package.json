{
  "name": "mini-trello-backend",
  "version": "1.0.0",
  "description": "Backend API for Mini Trello - A collaborative Kanban board application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "setup": "node -e \"const fs=require('fs'); if(!fs.existsSync('.env')){fs.copyFileSync('.env.example','.env'); console.log('Created .env from .env.example');} else { console.log('.env already exists'); }\" && node db-switch.js sqlite && npm start",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:api": "node test-api.js",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:reset": "npx sequelize-cli db:migrate:undo:all && npm run db:migrate && npm run db:seed",
    "seed": "node seeders/seed-runner.js run",
    "seed:fresh": "node seeders/seed-runner.js fresh",
    "seed:undo": "node seeders/seed-runner.js undo",
    "seed:dev": "npm run seed:fresh && echo 'Development database ready with sample data!'"
  },
  "keywords": [
    "express",
    "nodejs",
    "trello",
    "kanban",
    "collaboration"
  ],
  "author": "Aakash Chamola",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "google-auth-library": "^10.2.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "sequelize": "^6.32.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "axios": "^1.11.0",
    "colors": "^1.4.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.1",
    "supertest": "^6.3.3"
  }
}
